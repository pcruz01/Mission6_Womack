@model Application

<div class="text-center">
    <h1 style="margin-bottom: 15px;" class="display-4">Add a movie to the collection</h1>
</div>

<form method="post">
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Edited">Edited:</label><br />
        <label><input type="radio" asp-for="Edited" value="true" /> Yes</label>
        <label><input type="radio" asp-for="Edited" value="false" checked /> No</label>
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>